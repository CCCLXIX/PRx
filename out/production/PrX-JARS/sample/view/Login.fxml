                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </PasswordField>
            <Label fx:id="check" alignment="CENTER" prefWidth="200.0" text="Login to continue" wrapText="true" textAlignment="CENTER"/>
            <Button fx:id="loginButton" mnemonicParsing="false" text="Login">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Button>
        </children>
    </VBox>
</center>
</BorderPane>
